<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Reports </h3>
            </div>

            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix"></div>

        <div class="row">

            <div class="col-md-6 col-sm-6 col-xs-6">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>List of Reports</h2>
                        <div class="clearfix"></div>
                    </div>

                    <div class="x_content">

                        <div class="table-responsive">
                            <table class="table table-striped jambo_table">
                                <thead>
                                    <tr class="headings">
                                        <th class="column-title">Title </th>
                                        <th class="column-title">Description</th>
                                        <th class="column-title">Added By</th>
                                        <th class="column-title">View Detail </th>


                                    </tr>
                                </thead>

                                <tbody>

                                    {{#each patientInfo}} {{#each reports}}
                                    <tr class="even pointer">
                                        <td class=" ">{{this.title}}</td>
                                        <td class=" ">{{this.description}} </td>
                                        <td class=" ">{{idtoName this.docEdited}}</td>
                                        <td class=" ">
                                            <button class="btn btn-info viewReport" data-id="{{../this.ethAddr}} {{../../dr.ethAddr}} {{this.id}}">
                                                <i class="fa fa-eye"></i>
                                            </button>
                                        </td>

                                    </tr>

                                    {{/each}} {{/each}}


                                </tbody>
                            </table>
                        </div>
                        <a href="/doctor/{{dr.ethAddr}}/{{patientInfo.ethAddr}}/reportsadd" class="btn btn-success">
                            <i class="fa fa-plus"></i> New Entry</a>

                    </div>
                </div>
            </div>
            <div class="col-md-6 col-sm-6 col-xs-6">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Detail of Medication</h2>
                        <div class="clearfix"></div>
                    </div>

                    <div class="x_content">
                        <div id="reportBlank">
                            <h4 class="text-center" style="margin:6em;">Click on View Details from the list to view Medication details.</h4>
                        </div>
                        <div id="reportDetail">
                            <h3 id="RTitle"></h3>


                            <ul class="list-unstyled user_data">
                                <li>
                                    <button class="btn btn-info" id ="downloadReport">Download</button>
                                </li>

                                <li class="m-top-xs">
                                    <i class="fa fa-plus user-profile-icon"></i>
                                    <text style="font-size:11pt" id="RDescription"></text>
                                </li>
                            </ul>

                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /page content -->