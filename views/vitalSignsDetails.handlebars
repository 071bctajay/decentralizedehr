<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Vital Signs</h3>
            </div>
            {{!-- Search Bar --}}
            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix" text-align="center"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        Click to view the details of Vital Signs
                    </div>
                    <div class="x_content">
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <div class="x_panel">
                                <div class="x_title">
                                    <h2>Lists of Vital Signs
                                    </h2>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="x_content">

                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>Name</th>
                                                <th>Date</th>
                                                <th>Status</th>
                                                <th>Value</th>
                                                <th>Unit</th>
                                                <th>View Details</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            {{#each patient}}
                                                {{#each vitalSign}}
                                            <tr>
                                                <td>{{this.name}}</td>
                                                <td>{{this.dateOfNote}}</td>
                                                <td>{{this.status}}</td>
                                                <td>{{this.value}}</td>
                                                <td>{{this.unit}}</td>
                                                <td>
                                                    
                                                    <button class="btn btn-info btn-retrieve" data-id='{{../patient.ethAddr}}'>
                                                        <i class="fa fa-eye"></i>
                                                    </button>
                                                </td>
                                            </tr>
                                            {{/each}}
                                            {{/each}}

                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12" id="blankProfile">
                            <h4 class="text-center" style="margin:6em;">Click on View Details from the list to view Vital Signs Details.</h4>
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12" id="vitalSigns">

                            <h3 id = "vName"></h3>
                            <h4 id = "vDate"></h4>
                            <h4 id = "vvalue"></h4>
                            <ul class="list-unstyled user_data">
                                <li>
                                    <i class="fa fa-map-marker user-profile-icon"></i> Status: <text id= "vstatus" style="font-size:11pt"></text>
                                </li>

                                <li>
                                    <i class="fa fa-phone user-profile-icon"></i> Notes: <text id= "vnotes" style="font-size:11pt"></text>
                                </li>
                                </li>

                            </ul>

                            {{!-- <a class="btn btn-success" id="sharebtn">
                                <i class="fa fa-share-alt m-right-xs"></i>Share</a>
                            <br /> --}}

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- /page content -->