<!-- page content -->
<div class="right_col" role="main">
    <div class="">
        <div class="page-title">
            <div class="title_left">
                <h3>Share Profile</h3>
            </div>
            {{!-- Search Bar --}}
            <div class="title_right">
                <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        <input type="text" class="form-control" placeholder="Search for...">
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="button">Go!</button>
                        </span>
                    </div>
                </div>
            </div>
        </div>

        <div class="clearfix" text-align="center"></div>

        <div class="row">
            <div class="col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        Choose from a list of doctors to share you profile to.
                    </div>
                    <div class="x_content">
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <div class="x_panel">
                                <div class="x_title">
                                    <h2>Doctors
                                        <small>List of Doctors available in the system</small>
                                    </h2>
                                    <div class="clearfix"></div>
                                </div>
                                <div class="x_content">

                                    <table class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>First Name</th>
                                                <th>Last Name</th>
                                                <th>Username</th>
                                                <th>Specialization</th>
                                                <th> View Profile</th>
                                                <th>Share</th>
                                            </tr>
                                        </thead>
                                        <tbody>

                                            {{#each doctors}}
                                            <tr>
                                                <td>{{this.personalDetail.firstName}}</td>
                                                <td>{{this.personalDetail.lastName}}</td>
                                                <td>{{this.username}}</td>
                                                <td>{{this.personalDetail.specializationDesc}}</td>
                                                <td>
                                                    
                                                    <button class="btn btn-info" id="btn-retrieve" data-id='{{this.ethAddr}} {{../patient.ethAddr}}'>
                                                        <i class="fa fa-eye"></i>
                                                    </button>
                                                </td>
                                                <td>
                                                    <a href='/patient/{{../patient.ethAddr}}/{{this.ethAddr}}/sharedoc/info' class="btn btn-success" style="">
                                                        <i class="fa fa-share-alt"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                            {{/each}}

                                        </tbody>
                                    </table>

                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12" id="blankProfile">
                            <h4 class="text-center" style="margin:6em;">Click on View Profile from the list to view Dr. profile.</h4>
                        </div>
                        <div class="col-md-6 col-sm-6 col-xs-12" id="drProfile">
                            <div class="profile_img">
                                <div id="crop-avatar">
                                    <!-- Current avatar -->
                                    <img class="img-responsive avatar-view" style="height:10em;"id="drProImg" src="" alt="Avatar" title="Change the avatar">
                                </div>
                            </div>
                            <h3 id = "drName"></h3>
                            <h4 id = "drSpecialization"></h4>
                            <h4 id = "drNMC"></h4>
                            <ul class="list-unstyled user_data">
                                <li>
                                    <i class="fa fa-map-marker user-profile-icon"></i> Address: <text id= "drAddress" style="font-size:11pt"></text>
                                </li>

                                <li>
                                    <i class="fa fa-phone user-profile-icon"></i> Contact: <text id= "drContact" style="font-size:11pt"></text>
                                </li>
                                </li>

                                <li class="m-top-xs">
                                    <i class="fa fa-plus user-profile-icon"></i> Hospitals: <text id= "drHospitals" style="font-size:11pt"></text>
                                </li>
                            </ul>

                            <a class="btn btn-success" id="sharebtn">
                                <i class="fa fa-share-alt m-right-xs"></i>Share</a>
                            <br />

                        

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- /page content -->