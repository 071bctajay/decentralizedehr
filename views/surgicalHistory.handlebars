                <label class="control-label col-md-3 col-sm-3 col-xs-12">Hospital Name
                  <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <input type="text" class="form-control col-md-7 col-xs-12" required="required">
                </div>
