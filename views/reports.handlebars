<!-- page content -->
<div class=" right_col" role="main">
  <div class="">
    <div class="page-title">
      <div class="title_left">
        <h3>Reports</h3>
      </div>
    </div>
    <div class="clearfix"></div>
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
          <div class="x_title">
            <h2>Please fill the following form
              <br/>
              <small>Field With '*' is mandatory to fill.</small>
            </h2>

            <div class="clearfix"></div>
          </div>
          <div class="x_content">
            <br />
            <form class="form-horizontal form-label-left" method="post" action="/patient/{{patient.ethAddr}}/reportssubmit" enctype="multipart/form-data">

              <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="title">Title
                  <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <input type="text" id="title" required="required" class="form-control col-md-7 col-xs-12" name="title">
                </div>
              </div>

              <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="description"> Reports Description
                  <br>(20 chars min, 100 max) :</label>
                <textarea id="message" required="required" class="col-md-6 col-sm-6 col-xs-12" name="description" data-parsley-trigger="keyup"
                  data-parsley-minlength="20" data-parsley-maxlength="100" data-parsley-minlength-message="Come on! You need to enter at least a 20 caracters long comment.."
                  data-parsley-validation-threshold="10"></textarea>
              </div>

              <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12" for="profilePic">Upload Lab Reports </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <input type="file" enctype="multipart/form-data" class="form-control-file col-md-7 col-xs-12" name="img">
                </div>
              </div>

              <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">Added By:
                  <span class="required">*</span>
                </label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                  <select class="form-control" name="addedBy">
                    {{#each users}}
                    <option>{{this}}</option>
                    {{/each}}
                  </select>
                </div>
              </div>

              <div class="ln_solid"></div>
              <div class="form-group">
                <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                  <button class="btn btn-primary" type="button">Cancel</button>
                  <button class="btn btn-primary" type="reset">Reset</button>
                  <button type="submit" class="btn btn-success">Submit</button>
                </div>
              </div>

            </form>
            
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- /page content -->